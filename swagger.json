  "components": {
    "schemas": {
      "Contact": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Identifiant unique du contact"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date de création"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date de dernière modification"
          },
          "firstName": {
            "type": "string",
            "description": "Prénom",
            "example": "Jean"
          },
          "lastName": {
            "type": "string",
            "description": "Nom de famille",
            "example": "Dupont"
          },
          "companyName": {
            "type": "string",
            "nullable": true,
            "description": "Nom de l'entreprise",
            "example": "Acme Corp"
          },
          "jobTitle": {
            "type": "string",
            "nullable": true,
            "description": "Titre du poste",
            "example": "Directeur RH"
          },
          "workEmail": {
            "type": "string",
            "format": "email",
            "description": "Adresse email professionnelle",
            "example": "jean.dupont@acme.com"
          },
          "workPhone": {
            "type": "string",
            "description": "Téléphone professionnel",
            "example": "819-123-4567"
          },
          "postalCode": {
            "type": "string",
            "nullable": true,
            "description": "Code postal",
            "example": "J1A 1A1"
          },
          "message": {
            "type": "string",
            "description": "Message du contact",
            "example": "Nous recherchons un ingénieur en mécanique..."
          },
          "status": {
            "type": "string",
            "enum": ["nouveau", "en_cours", "traite", "ferme"],
            "description": "Statut du contact",
            "example": "nouveau"
          },
          "priority": {
            "type": "string",
            "enum": ["basse", "moyenne", "haute", "urgente"],
            "description": "Priorité du contact",
            "example": "moyenne"
          }
        },
        "required": ["id", "firstName", "lastName", "workEmail", "workPhone", "message", "status", "priority"]
      },
      "ContactCreate": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "example": "Jean"
          },
          "lastName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "example": "Dupont"
          },
          "companyName": {
            "type": "string",
            "maxLength": 200,
            "example": "Acme Corp"
          },
          "jobTitle": {
            "type": "string",
            "maxLength": 150,
            "example": "Directeur RH"
          },
          "workEmail": {
            "type": "string",
            "format": "email",
            "maxLength": 320,
            "example": "jean.dupont@acme.com"
          },
          "workPhone": {
            "type": "string",
            "maxLength": 20,
            "example": "819-123-4567"
          },
          "postalCode": {
            "type": "string",
            "maxLength": 10,
            "example": "J1A 1A1"
          },
          "message": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2000,
            "example": "Nous recherchons un ingénieur en mécanique..."
          },
          "status": {
            "type": "string",
            "enum": ["nouveau", "en_cours", "traite", "ferme"],
            "default": "nouveau"
          },
          "priority": {
            "type": "string",
            "enum": ["basse", "moyenne", "haute", "urgente"],
            "default": "moyenne"
          }
        },
        "required": ["firstName", "lastName", "workEmail", "workPhone", "message"]
      },
      "ContactUpdate": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "maxLength": 100
          },
          "lastName": {
            "type": "string",
            "maxLength": 100
          },
          "companyName": {
            "type": "string",
            "maxLength": 200
          },
          "jobTitle": {
            "type": "string",
            "maxLength": 150
          },
          "workEmail": {
            "type": "string",
            "format": "email",
            "maxLength": 320
          },
          "workPhone": {
            "type": "string",
            "maxLength": 20
          },
          "postalCode": {
            "type": "string",
            "maxLength": 10
          },
          "message": {
            "type": "string",
            "maxLength": 2000
          },
          "status": {
            "type": "string",
            "enum": ["nouveau", "en_cours", "traite", "ferme"]
          },
          "priority": {
            "type": "string",
            "enum": ["basse", "moyenne", "haute", "urgente"]
          }
        }
      },
      "Application": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "firstName": {
            "type": "string",
            "example": "Marie"
          },
          "lastName": {
            "type": "string",
            "example": "Martin"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "marie.martin@email.com"
          },
          "phone": {
            "type": "string",
            "example": "514-123-4567"
          },
          "adresse": {
            "type": "string",
            "example": "123 Rue Example, Montréal, QC"
          },
          "year_of_experience": {
            "type": "integer",
            "minimum": 0,
            "example": 5
