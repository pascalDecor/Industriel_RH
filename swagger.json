{
  "openapi": "3.0.3",
  "info": {
    "title": "Industrielle RH API",
    "description": "API pour la plateforme de recrutement Industrielle RH - Gestion des candidatures, recrutements, calculs salariaux et plus",
    "version": "1.0.0",
    "contact": {
      "name": "Industrielle RH",
      "email": "info@industriellerh.ca",
      "url": "https://industriellerh.ca"
    },
    "license": {
      "name": "Propriétaire",
      "url": "https://industriellerh.ca/terms"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Serveur de développement"
    },
    {
      "url": "https://industriellerh.ca/api",
      "description": "Serveur de production"
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Récupérer tous les contacts",
        "description": "Récupère la liste paginée des contacts avec possibilité de recherche et filtrage",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Numéro de page",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Nombre d'éléments par page",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Terme de recherche",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filtrer par statut",
            "schema": {
              "type": "string",
              "enum": ["nouveau", "en_cours", "traite", "ferme"]
            }
          },
          {
            "name": "priority",
            "in": "query",
            "description": "Filtrer par priorité",
            "schema": {
              "type": "string",
              "enum": ["basse", "moyenne", "haute", "urgente"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des contacts récupérée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Contact"
                      }
                    },
                    "meta": {
                      "$ref": "#/components/schemas/PaginationMeta"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "summary": "Créer un nouveau contact",
        "description": "Crée un nouveau contact dans le système",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContactCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact créé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          },
          "400": {
            "description": "Données invalides",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Récupérer un contact par ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contact trouvé",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          },
          "404": {
            "description": "Contact non trouvé"
          }
        }
      },
      "put": {
        "tags": ["Contacts"],
        "summary": "Mettre à jour un contact",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContactUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contact mis à jour avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Supprimer un contact",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Contact supprimé avec succès"
          },
          "404": {
            "description": "Contact non trouvé"
          }
        }
      }
    },
