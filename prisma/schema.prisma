generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Models define your data and tell Prisma which data to store in the database.
model User {
  id                    String    @id @default(cuid())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  name                  String
  email                 String    @unique
  password              String
  isActive              Boolean   @default(true)
  lastLogin             DateTime?
  avatarUrl             String?
  otp                   String? // Code OTP temporaire, nullable
  otpExpiration         DateTime? // Date et heure d'expiration du OTP, nullable
  mustChangePassword    Boolean   @default(false) // Force le changement de mot de passe à la prochaine connexion
  tempPasswordExpires   DateTime? // Date d'expiration du mot de passe temporaire
  firstLoginToken       String?   // Token sécurisé pour la première connexion
  firstLoginTokenExpires DateTime? // Expiration du token de première connexion
  articles              Article[]
  userRoles             UserRoleAssignment[]

  @@index([email])
  @@index([isActive])
  @@index([mustChangePassword])
  @@index([firstLoginToken])
}

model UserRoleAssignment {
  id          String   @id @default(cuid())
  userId      String
  role        UserRole
  isPrimary   Boolean  @default(false)
  assignedAt  DateTime @default(now())
  assignedBy  String?  // ID de l'utilisateur qui a assigné ce rôle
  isActive    Boolean  @default(true)
  expiresAt   DateTime? // Pour les rôles temporaires
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Contraintes
  @@unique([userId, role]) // Un utilisateur ne peut avoir le même rôle qu'une fois
  @@index([userId])
  @@index([role])
  @@index([isPrimary])
}

enum UserRole {
  SUPER_ADMIN
  HR_DIRECTOR
  HR_MANAGER
  RECRUITER_SENIOR
  RECRUITER
  HR_ASSISTANT
  CONSULTANT
}

model Article {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  titre     String
  contenu   Json[]   @default([])
  published Boolean  @default(false)
  image     String?
  views     Int      @default(0)
  // Relations
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String

  tags        Tag[]
  specialites Specialite[]

  // Index optimisés pour les requêtes fréquentes
  @@index([authorId])
  @@index([createdAt])
  @@index([published])
  @@index([titre])
  @@index([views])
  @@index([published, createdAt])
  @@index([authorId, published])
}

model Tag {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  libelle   String
  // Relations
  articles  Article[]

  @@index([libelle])
  @@index([createdAt])
}

model Specialite {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  libelle   String
  // Relations
  articles  Article[]

  @@index([libelle])
  @@index([createdAt])
}

model Function {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  libelle   String
  // Relations
  sector    Sector   @relation(fields: [sectorId], references: [id])
  sectorId  String

  candidats Application[]

  @@index([sectorId])
}

model Sector {
  id                      String        @id @default(cuid())
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt
  libelle                 String
  description             String?
  alternativeDescriptions String[]      @default([])
  // Relations
  functions               Function[]
  candidats               Application[]
  Sections                SectionUI[]

  hires Hire[]
}

model SectionUI {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  libelle     String
  slug        String
  description String?
  image       String
  page        String
  // Relations
  sector      Sector   @relation(fields: [sectorId], references: [id])
  sectorId    String

  @@index([sectorId])
}

model Civility {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  libelle   String
  // Relations
  candidats Application[]
  hires     Hire[]
}

model Notice {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String
  author    String
  stars     Int      @default(4)
}

model Country {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  libelle   String
  // Relations
  cities    City[]
}

model City {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  libelle   String
  // Relations
  country   Country       @relation(fields: [countryId], references: [id])
  countryId String
  candidats Application[]

  @@index([countryId])
}

model Application {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  lastName           String
  firstName          String
  email              String
  phone              String
  adresse            String
  year_of_experience Int
  cv                 String
  coverLetter        String?
  state              String   @default("pending")
  // Relations
  sector             Sector   @relation(fields: [sectorId], references: [id])
  sectorId           String
  // 
  function           Function @relation(fields: [functionId], references: [id])
  functionId         String
  // 
  civility           Civility @relation(fields: [civilityId], references: [id])
  civilityId         String
  // 
  city               City     @relation(fields: [cityId], references: [id])
  cityId             String

  @@index([sectorId])
  @@index([functionId])
  @@index([civilityId])
  @@index([cityId])
}

model Hire {
  id                   String   @id @default(cuid())
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  lastName             String
  firstName            String
  email                String
  phone                String
  number_of_positions  Int
  document_support     String?
  details_of_positions Json[]   @default([])
  company_name         String
  company_website      String?
  state                String   @default("pending")

  // Relations
  civility   Civility @relation(fields: [civilityId], references: [id])
  civilityId String

  sectors Sector[]

  @@index([civilityId])
}

model Contact {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  firstName   String  
  lastName    String   
  companyName String?  
  jobTitle    String?  
  workEmail   String   
  workPhone   String   
  postalCode  String?  
  message     String   @db.Text
  status      String   @default("pending") // pending, contacted, resolved
  priority    String   @default("normal") // low, normal, high, urgent
  
  @@index([status])
  @@index([createdAt])
  @@index([workEmail])
}

model JobSearch {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  jobTitle    String   @db.VarChar(200)
  location    String   @db.VarChar(200)
  email       String?  @db.VarChar(320)
  phone       String?  @db.VarChar(20)
  experience  String?  @db.VarChar(50)
  keywords    String[] @default([])
  salary      String?  @db.VarChar(50)
  jobType     String?  @db.VarChar(50) // full-time, part-time, contract, remote
  
  @@index([jobTitle])
  @@index([location])
  @@index([createdAt])
}

model SalaryCalculation {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  jobTitle    String   @db.VarChar(200)
  industry    String   @db.VarChar(100)
  location    String   @db.VarChar(200)
  experience  Int      @db.SmallInt
  education   String?  @db.VarChar(100)
  skills      String[] @default([])
  company     String?  @db.VarChar(200)
  salaryRange String   @db.VarChar(100)
  email       String?  @db.VarChar(320)
  
  @@index([jobTitle])
  @@index([industry])
  @@index([location])
  @@index([createdAt])
}

model TaxCalculation {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  annualIncome     Decimal  @db.Decimal(12, 2)
  province         String   @db.VarChar(50)
  filingStatus     String   @db.VarChar(50)
  federalTax       Decimal  @db.Decimal(12, 2)
  provincialTax    Decimal  @db.Decimal(12, 2)
  totalTax         Decimal  @db.Decimal(12, 2)
  netIncome        Decimal  @db.Decimal(12, 2)
  effectiveRate    Decimal  @db.Decimal(5, 2)
  marginalRate     Decimal  @db.Decimal(5, 2)
  email            String?  @db.VarChar(320)
  
  @@index([province])
  @@index([annualIncome])
  @@index([createdAt])
}

model MortgageCalculation {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  homePrice        Decimal  @db.Decimal(12, 2)
  downPayment      Decimal  @db.Decimal(12, 2)
  interestRate     Decimal  @db.Decimal(5, 4)
  loanTerm         Int      @db.SmallInt
  propertyTax      Decimal? @db.Decimal(12, 2)
  insurance        Decimal? @db.Decimal(12, 2)
  monthlyPayment   Decimal  @db.Decimal(12, 2)
  totalInterest    Decimal  @db.Decimal(12, 2)
  totalPayment     Decimal  @db.Decimal(12, 2)
  email            String?  @db.VarChar(320)
  
  @@index([homePrice])
  @@index([createdAt])
}

model CNESSTValidation {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  companyName   String   @db.VarChar(200)
  companyNumber String?  @db.VarChar(50)
  email         String   @db.VarChar(320)
  phone         String?  @db.VarChar(20)
  documentPath  String   @db.VarChar(500)
  documentType  String   @db.VarChar(100)
  validationResult Json?  @default("{}")
  status        String   @default("pending") // pending, validated, rejected
  notes         String?  @db.Text
  
  @@index([companyName])
  @@index([status])
  @@index([createdAt])
}
