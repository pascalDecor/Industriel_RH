generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Models define your data and tell Prisma which data to store in the database.
model User {
  id                    String    @id @default(cuid())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  name                  String
  email                 String    @unique
  password              String
  isActive              Boolean   @default(true)
  lastLogin             DateTime?
  avatarUrl             String?
  otp                   String? // Code OTP temporaire, nullable
  otpExpiration         DateTime? // Date et heure d'expiration du OTP, nullable
  mustChangePassword    Boolean   @default(false) // Force le changement de mot de passe à la prochaine connexion
  tempPasswordExpires   DateTime? // Date d'expiration du mot de passe temporaire
  firstLoginToken       String?   // Token sécurisé pour la première connexion
  firstLoginTokenExpires DateTime? // Expiration du token de première connexion
  articles              Article[]
  userRoles             UserRoleAssignment[]
  campaigns             Campaign[] @relation("CampaignCreatedBy")

  @@index([email])
  @@index([isActive])
  @@index([mustChangePassword])
  @@index([firstLoginToken])
}

model UserRoleAssignment {
  id          String   @id @default(cuid())
  userId      String
  role        UserRole
  isPrimary   Boolean  @default(false)
  assignedAt  DateTime @default(now())
  assignedBy  String?  // ID de l'utilisateur qui a assigné ce rôle
  isActive    Boolean  @default(true)
  expiresAt   DateTime? // Pour les rôles temporaires
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Contraintes
  @@unique([userId, role]) // Un utilisateur ne peut avoir le même rôle qu'une fois
  @@index([userId])
  @@index([role])
  @@index([isPrimary])
}

enum UserRole {
  SUPER_ADMIN
  HR_DIRECTOR
  HR_MANAGER
  RECRUITER_SENIOR
  RECRUITER
  HR_ASSISTANT
  CONSULTANT
}

model Article {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  titre     String
  titre_en  String?  // Titre en anglais
  contenu   Json[]   @default([])
  contenu_en Json[]  @default([]) // Contenu en anglais
  published Boolean  @default(false)
  image     String?
  views     Int      @default(0)
  // Relations
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String

  tags        Tag[]
  specialites Specialite[]

  // Index optimisés pour les requêtes fréquentes
  @@index([authorId])
  @@index([createdAt])
  @@index([published])
  @@index([titre])
  @@index([titre_en])
  @@index([views])
  @@index([published, createdAt])
  @@index([authorId, published])
}

model Tag {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  libelle   String
  libelle_en String?  // Libellé en anglais
  // Relations
  articles  Article[]

  @@index([libelle])
  @@index([libelle_en])
  @@index([createdAt])
}

model Specialite {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  libelle   String
  libelle_en String?  // Libellé en anglais
  // Relations
  articles  Article[]
  newsletters Newsletter[]
  newsletterSubscribers NewsletterSubscriber[]

  @@index([libelle])
  @@index([libelle_en])
  @@index([createdAt])
}

model Function {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  libelle   String
  libelle_en String?  // Libellé en anglais
  // Relations
  sector    Sector   @relation(fields: [sectorId], references: [id])
  sectorId  String

  candidats Application[]

  @@index([sectorId])
  @@index([libelle_en])
}

model Sector {
  id                      String        @id @default(cuid())
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt
  libelle                 String
  libelle_en              String?       // Libellé en anglais
  description             String?
  description_en          String?       // Description en anglais
  alternativeDescriptions String[]      @default([])
  // Relations
  functions               Function[]
  candidats               Application[]
  Sections                SectionUI[]

  hires Hire[]

  @@index([libelle_en])
}

model SectionUI {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  libelle     String
  libelle_en  String?  // Libellé en anglais
  slug        String
  description String?
  description_en String?  // Description en anglais
  image       String
  page        String
  // Relations
  sector      Sector   @relation(fields: [sectorId], references: [id])
  sectorId    String

  @@index([sectorId])
  @@index([libelle_en])
}

model Civility {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  libelle   String
  libelle_en String?      // Libellé en anglais
  // Relations
  candidats Application[]
  hires     Hire[]

  @@index([libelle_en])
}

model Notice {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String
  content_en String?  // Contenu en anglais
  author    String
  author_en String?   // Nom de l'auteur en anglais
  stars     Int      @default(4)

  @@index([content_en])
}

model Country {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  libelle   String
  // Relations
  cities    City[]
}

model City {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  libelle   String
  // Relations
  country   Country       @relation(fields: [countryId], references: [id])
  countryId String
  candidats Application[]

  @@index([countryId])
}

model Application {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  lastName           String
  firstName          String
  email              String
  phone              String
  adresse            String
  year_of_experience Int
  cv                 String
  coverLetter        String?
  state              String   @default("pending")
  // Relations
  sector             Sector   @relation(fields: [sectorId], references: [id])
  sectorId           String
  // 
  function           Function @relation(fields: [functionId], references: [id])
  functionId         String
  // 
  civility           Civility @relation(fields: [civilityId], references: [id])
  civilityId         String
  // 
  city               City     @relation(fields: [cityId], references: [id])
  cityId             String

  @@index([sectorId])
  @@index([functionId])
  @@index([civilityId])
  @@index([cityId])
}

model Hire {
  id                   String   @id @default(cuid())
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  lastName             String
  firstName            String
  email                String
  phone                String
  number_of_positions  Int
  document_support     String?
  details_of_positions Json[]   @default([])
  company_name         String
  company_website      String?
  state                String   @default("pending")

  // Relations
  civility   Civility @relation(fields: [civilityId], references: [id])
  civilityId String

  sectors Sector[]

  @@index([civilityId])
}

model Contact {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  firstName   String  
  lastName    String   
  companyName String?  
  jobTitle    String?  
  workEmail   String   
  workPhone   String   
  postalCode  String?  
  message     String   @db.Text
  status      String   @default("pending") // pending, contacted, resolved
  priority    String   @default("normal") // low, normal, high, urgent
  
  @@index([status])
  @@index([createdAt])
  @@index([workEmail])
}

model JobSearch {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  jobTitle    String   @db.VarChar(200)
  location    String   @db.VarChar(200)
  email       String?  @db.VarChar(320)
  phone       String?  @db.VarChar(20)
  experience  String?  @db.VarChar(50)
  keywords    String[] @default([])
  salary      String?  @db.VarChar(50)
  jobType     String?  @db.VarChar(50) // full-time, part-time, contract, remote
  
  @@index([jobTitle])
  @@index([location])
  @@index([createdAt])
}

model SalaryCalculation {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  jobTitle    String   @db.VarChar(200)
  industry    String   @db.VarChar(100)
  location    String   @db.VarChar(200)
  experience  Int      @db.SmallInt
  education   String?  @db.VarChar(100)
  skills      String[] @default([])
  company     String?  @db.VarChar(200)
  salaryRange String   @db.VarChar(100)
  email       String?  @db.VarChar(320)
  
  @@index([jobTitle])
  @@index([industry])
  @@index([location])
  @@index([createdAt])
}

model TaxCalculation {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  annualIncome     Decimal  @db.Decimal(12, 2)
  province         String   @db.VarChar(50)
  filingStatus     String   @db.VarChar(50)
  federalTax       Decimal  @db.Decimal(12, 2)
  provincialTax    Decimal  @db.Decimal(12, 2)
  totalTax         Decimal  @db.Decimal(12, 2)
  netIncome        Decimal  @db.Decimal(12, 2)
  effectiveRate    Decimal  @db.Decimal(5, 2)
  marginalRate     Decimal  @db.Decimal(5, 2)
  email            String?  @db.VarChar(320)
  
  @@index([province])
  @@index([annualIncome])
  @@index([createdAt])
}

model MortgageCalculation {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  homePrice        Decimal  @db.Decimal(12, 2)
  downPayment      Decimal  @db.Decimal(12, 2)
  interestRate     Decimal  @db.Decimal(5, 4)
  loanTerm         Int      @db.SmallInt
  propertyTax      Decimal? @db.Decimal(12, 2)
  insurance        Decimal? @db.Decimal(12, 2)
  monthlyPayment   Decimal  @db.Decimal(12, 2)
  totalInterest    Decimal  @db.Decimal(12, 2)
  totalPayment     Decimal  @db.Decimal(12, 2)
  email            String?  @db.VarChar(320)
  
  @@index([homePrice])
  @@index([createdAt])
}

model CNESSTValidation {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  companyName   String   @db.VarChar(200)
  companyNumber String?  @db.VarChar(50)
  email         String   @db.VarChar(320)
  phone         String?  @db.VarChar(20)
  documentPath  String   @db.VarChar(500)
  documentType  String   @db.VarChar(100)
  validationResult Json?  @default("{}")
  status        String   @default("pending") // pending, validated, rejected
  notes         String?  @db.Text

  @@index([companyName])
  @@index([status])
  @@index([createdAt])
}

model Newsletter {
  id              String    @id @default(cuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  firstName       String    @db.VarChar(100)
  lastName        String    @db.VarChar(100)
  email           String    @unique @db.VarChar(320)
  status          String    @default("active") // active, unsubscribed
  subscribedAt    DateTime? @default(now())
  unsubscribedAt  DateTime?

  // Relations
  specialites     Specialite[]

  @@index([email])
  @@index([status])
  @@index([subscribedAt])
  @@index([createdAt])
}

model NewsletterSubscriber {
  id              String     @id @default(cuid())
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  firstName       String     @db.VarChar(100)
  lastName        String     @db.VarChar(100)
  email           String     @unique @db.VarChar(320)
  isActive        Boolean    @default(true)
  subscribedAt    DateTime   @default(now())
  unsubscribedAt  DateTime?
  source          String?    @db.VarChar(100) // website, manual, import

  // Relations
  speciality      Specialite? @relation(fields: [specialityId], references: [id])
  specialityId    String?

  @@index([email])
  @@index([isActive])
  @@index([specialityId])
  @@index([subscribedAt])
  @@index([createdAt])
}

model Campaign {
  id                        String    @id @default(cuid())
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  title                     String    @db.VarChar(200)
  subject                   String    @db.VarChar(200)
  content                   String    @db.Text
  templateId                String?   @db.VarChar(50)
  status                    String    @default("draft") // draft, scheduled, sending, sent, paused, cancelled
  scheduledAt               DateTime?
  sentAt                    DateTime?
  audienceType              String    @default("all") // all, specialities, custom
  audienceSpecialityIds     String?   @db.Text // JSON array of speciality IDs
  subscriberCount           Int       @default(0)
  testEmails                String?   @db.Text // JSON array of test emails
  stats                     String?   @db.Text // JSON object with campaign statistics

  // Relations
  createdBy                 User      @relation("CampaignCreatedBy", fields: [createdById], references: [id])
  createdById               String

  @@index([status])
  @@index([createdById])
  @@index([scheduledAt])
  @@index([sentAt])
  @@index([createdAt])
}

model Translation {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  key         String   @db.VarChar(200) // Clé de traduction (ex: "footer.services")
  category    String?  @db.VarChar(100) // Catégorie optionnelle (ex: "footer", "nav", "common")
  fr          String   @db.Text // Texte en français
  en          String   @db.Text // Texte en anglais
  description String?  @db.Text // Description pour aider les traducteurs

  @@unique([key]) // Une seule traduction par clé
  @@index([category])
  @@index([key])
}

model ActivityLog {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  type        String   @db.VarChar(50) // Type d'activité (ex: "translation_update", "user_created", etc.)
  action      String   @db.VarChar(100) // Action effectuée (ex: "update", "create", "delete")
  entityType  String   @db.VarChar(50) // Type d'entité (ex: "translation", "user", "article")
  entityId    String?  @db.VarChar(50) // ID de l'entité concernée
  description String   @db.Text // Description lisible de l'action
  metadata    Json?    @default("{}") // Métadonnées supplémentaires (ancien/nouveau contenu, etc.)
  userId      String   // Utilisateur qui a effectué l'action
  userEmail   String   @db.VarChar(320) // Email de l'utilisateur pour affichage rapide
  userName    String   @db.VarChar(200) // Nom de l'utilisateur pour affichage rapide

  @@index([createdAt])
  @@index([type])
  @@index([entityType])
  @@index([userId])
  @@index([createdAt, type])
}

model MediaAsset {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  key          String   @unique @db.VarChar(200) // Clé unique (ex: "logo", "banner_1", même que imagePathFinder)
  category     String?  @db.VarChar(100) // Catégorie (ex: "logos", "banners", "partners", "icons")

  // Chemins et URLs
  publicUrl    String   @db.Text // URL publique (Supabase Storage, Cloudinary, etc.)
  fallbackPath String?  @db.VarChar(500) // Chemin statique de secours (/images/...)
  storagePath  String?  @db.VarChar(500) // Chemin dans le storage (pour suppression)

  // Métadonnées de l'image
  fileName     String   @db.VarChar(255) // Nom du fichier original
  altText_fr   String?  @db.Text // Texte alternatif en français
  altText_en   String?  @db.Text // Texte alternatif en anglais
  width        Int?     // Largeur en pixels
  height       Int?     // Hauteur en pixels
  fileSize     Int?     // Taille du fichier en bytes
  mimeType     String?  @db.VarChar(100) // Type MIME (image/png, image/jpeg, etc.)

  // Gestion et optimisation
  isActive     Boolean  @default(true) // Si false, utilise le fallback statique
  priority     String   @default("normal") @db.VarChar(20) // "critical", "high", "normal", "low" pour preload
  description  String?  @db.Text // Description pour les admins

  // Traçabilité
  uploadedBy   String?  // ID de l'utilisateur qui a uploadé

  @@index([key])
  @@index([category])
  @@index([isActive])
  @@index([priority])
  @@index([createdAt])
}
