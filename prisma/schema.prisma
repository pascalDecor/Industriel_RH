generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Models define your data and tell Prisma which data to store in the database.
model User {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String
  email         String    @unique
  password      String
  otp           String? // Code OTP temporaire, nullable
  otpExpiration DateTime? // Date et heure dâ€™expiration du OTP, nullable
  articles      Article[]
}

model Article {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  titre     String
  contenu   Json[]   @default([])
  published Boolean  @default(false)
  image     String?
  views     Int      @default(0)
  // Relations
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String

  tags        Tag[]
  specialites Specialite[]

  @@index([authorId])
}

model Tag {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  libelle   String
  // Relations
  articles  Article[]
}

model Specialite {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  libelle   String
  // Relations
  articles  Article[]
}

model Function {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  libelle   String
  // Relations
  sector    Sector   @relation(fields: [sectorId], references: [id])
  sectorId  String

  candidats Application[]

  @@index([sectorId])
}

model Sector {
  id                      String        @id @default(cuid())
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt
  libelle                 String
  description             String?
  alternativeDescriptions String[]      @default([])
  // Relations
  functions               Function[]
  candidats               Application[]
  Sections                SectionUI[]

  hires Hire[]
}

model SectionUI {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  libelle     String
  slug        String
  description String?
  image       String
  page        String
  // Relations
  sector      Sector   @relation(fields: [sectorId], references: [id])
  sectorId    String

  @@index([sectorId])
}

model Civility {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  libelle   String
  // Relations
  candidats Application[]
  hires     Hire[]
}

model Notice {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String
  author    String
  stars     Int      @default(4)
}

model Country {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  libelle   String
  // Relations
  cities    City[]
}

model City {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  libelle   String
  // Relations
  country   Country       @relation(fields: [countryId], references: [id])
  countryId String
  candidats Application[]

  @@index([countryId])
}

model Application {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  lastName           String
  firstName          String
  email              String
  phone              String
  adresse            String
  year_of_experience Int
  cv                 String
  coverLetter        String?
  state              String   @default("pending")
  // Relations
  sector             Sector   @relation(fields: [sectorId], references: [id])
  sectorId           String
  // 
  function           Function @relation(fields: [functionId], references: [id])
  functionId         String
  // 
  civility           Civility @relation(fields: [civilityId], references: [id])
  civilityId         String
  // 
  city               City     @relation(fields: [cityId], references: [id])
  cityId             String

  @@index([sectorId])
  @@index([functionId])
  @@index([civilityId])
  @@index([cityId])
}

model Hire {
  id                   String   @id @default(cuid())
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  lastName             String
  firstName            String
  email                String
  phone                String
  number_of_positions  Int
  document_support     String?
  details_of_positions Json[]   @default([])
  company_name         String
  company_website      String?
  state                String   @default("pending")

  // Relations
  civility   Civility @relation(fields: [civilityId], references: [id])
  civilityId String

  sectors Sector[]

  @@index([civilityId])
}
